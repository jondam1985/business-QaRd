<link href="https://fonts.googleapis.com/css?family=Anton&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/assets/css/geometryBackground.css">
<img src="/assets/images/geometry.svg" alt="" class="geometryHeader">
<section id="container" class="geometry">

<!-- Name -->
<div>
  <div>
    <i class="fas fa-user"></i>
  </div>
  <div>
    <p>{{userFirstName}}</p>
    <p>{{userLastName}}</p>
  </div>
</div>

<!-- Number -->
<div>
  <div>
    <i class="fas fa-address-card"></i>
  </div>
  <div>
    <p><a href="tel:{{userPhone}}">{{userPhone}}</a></p>
    <p><a href="mailto:{{userEmail}}">{{userEmail}}</a></p>
  </div>
</div>

<div>
  <div>
    <i class="fas fa-briefcase"></i>
  </div>
  <div>
    <p>{{userCompany}}</p>
    <p>{{userRole}}</p>
  </div>
</div>

<div id="socialBlock">
  <div>
    <i class="fas fa-clipboard-list"></i>
  </div>
  <div id="socialLinks">
     <p><a href="{{userPortfolio}}" target="_blank">View my Portfolio</a></p>
     <p><a href="{{userLinkedIn}}" target="_blank">View my LinkedIn</a></p>
     <p><a href="{{userInstagram}}" target="_blank">View my Instagram</a></p>
  </div>
</div>

</section>

<div id="landscapeMessage">
  <div>
    <p>
    Our professional business QaRds have been crafted for optimal viewing in vertical viewports.
  </p>
  </div>
  <div>
    <i class="fas fa-undo"></i>
  </div>
</div>

